<h1>Welcome to the Sorting Hat!</h1>
<%= image_tag "http://flavorwire.files.wordpress.com/2009/06/sorting-hat.jpg" %>

<% if @student.errors.any? %>
<ul>
    <% @student.errors.full_messages.each do |err|%>
    <li> <%=err%></li>
    <%end%>
</ul>
  <%end%>


<%= form_for [@house, @student] do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :img_url %>
  <%= f.text_field :img_url %>
  <%= f.label :house_id %>
  <%= f.text_field :house_id %>
  <%= f.submit %>

<% end %>
